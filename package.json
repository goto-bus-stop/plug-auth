{
  "private": true,
  "name": "plug-auth",
  "version": "1.1.1",
  "devDependencies": {
    "ava": "^0.20.0",
    "babel-eslint": "^7.1.1",
    "babel-preset-es2015": "^6.9.0",
    "babel-register": "^6.14.0",
    "cross-env": "^5.0.0",
    "del": "^3.0.0",
    "express": "^4.14.0",
    "fast-async": "^6.2.1",
    "gulp": "^3.9.1",
    "gulp-rename": "^1.2.2",
    "gulp-uglify": "^3.0.0",
    "gulp-watch": "^4.3.8",
    "rollup": "^0.45.0",
    "rollup-plugin-babel": "^2.6.1",
    "rollup-plugin-commonjs": "^8.0.0",
    "rollup-plugin-node-resolve": "^3.0.0",
    "standard": "^10.0.0"
  },
  "scripts": {
    "postversion": "node version.js",
    "prepublish": "npm run install-packages && npm run build",
    "client:install": "cd packages/plug-auth-client && npm install",
    "server:install": "cd packages/plug-auth-server && npm install",
    "install-packages": "npm run client:install && npm run server:install",
    "build": "gulp",
    "lint": "standard packages/*/src/**/*.js gulpfile.js",
    "ava": "cross-env AVA=1 ava packages/*/test/*.js",
    "test": "npm run ava && npm run lint"
  },
  "ava": {
    "require": [
      "babel-register"
    ]
  },
  "standard": {
    "parser": "babel-eslint"
  }
}
